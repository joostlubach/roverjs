{
  "extends": ["tslint-react"],
  "rulesDirectory": ["tslint-consistent-codestyle"],
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "ban": false,
    "class-name": true,
    "comment-format": true,
    "curly": true,
    "eofline": false,
    "forin": true,
    "indent": [ true, "spaces" ],
    "interface-name": [true, "never-prefix"],
    "jsdoc-format": true,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-boolean-value": false,
    "label-position": true,
    "max-line-length": [ true, 160 ],
    "member-ordering": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": [
      true,
      "allow-empty-catch"
    ],
    "no-eval": true,
    "no-shadowed-variable": false,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "no-unused": {
      "severity": "warning",
      "options": [
        "ignore-parameters"
      ]
    },
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "radix": true,
    "semicolon": [true, "never"],
    "switch-default": false, // Pending https://github.com/palantir/tslint/issues/2104

    "trailing-comma": [false],

    "triple-equals": [ true, "allow-null-check" ],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [true, "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
